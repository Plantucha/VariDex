from dataclasses import dataclass
from enum import Enum


class PathogenicityClass(Enum):
    PATHOGENIC = "Pathogenic"
    LIKELY_PATHOGENIC = "Likely Pathogenic"
    UNCERTAIN = "Uncertain Significance"
    LIKELY_BENIGN = "Likely Benign"
    BENIGN = "Benign"


@dataclass
class ACMGEvidenceSet:
    # Pathogenic
    pvs1: bool = False

    ps1: bool = False
    ps2: bool = False
    ps3: bool = False
    ps4: bool = False

    pm1: bool = False
    pm2: bool = False
    pm3: bool = False
    pm4: bool = False
    pm5: bool = False
    pm6: bool = False

    pp1: bool = False
    pp2: bool = False
    pp3: bool = False
    pp4: bool = False
    pp5: bool = False

    # Benign
    ba1: bool = False

    bs1: bool = False
    bs2: bool = False
    bs3: bool = False
    bs4: bool = False

    bp1: bool = False
    bp2: bool = False
    bp3: bool = False
    bp4: bool = False
    bp5: bool = False
    bp6: bool = False
    bp7: bool = False

    # Derived counts
    def count_ps(self):
        return sum([self.ps1, self.ps2, self.ps3, self.ps4])

    def count_pm(self):
        return sum([self.pm1, self.pm2, self.pm3, self.pm4, self.pm5, self.pm6])

    def count_pp(self):
        return sum([self.pp1, self.pp2, self.pp3, self.pp4, self.pp5])

    def count_bs(self):
        return sum([self.bs1, self.bs2, self.bs3, self.bs4])

    def count_bp(self):
        return sum(
            [self.bp1, self.bp2, self.bp3, self.bp4, self.bp5, self.bp6, self.bp7]


ACMGCriteria = ACMGEvidenceSet
